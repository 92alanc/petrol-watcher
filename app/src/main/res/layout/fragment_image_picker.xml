<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="@dimen/size_circle_image_view"
        android:layout_height="@dimen/size_circle_image_view"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/grey_dark"
        app:civ_circle_background_color="@color/grey"/>

    <ImageButton
        android:id="@+id/buttonRotateClockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/ic_rotate_clockwise"
        android:contentDescription="@string/rotate_right"
        app:layout_constraintTop_toTopOf="@id/imageViewProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewProfile"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>