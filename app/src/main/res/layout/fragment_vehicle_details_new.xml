<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/radius_corner_default">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default">

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="90dp"/>

            <TextView
                android:id="@+id/labelYearAuto"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spinnerYear"
                app:layout_constraintHorizontal_bias="0"/>

            <Spinner
                android:id="@+id/spinnerYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/spinnerManufacturer"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsAuto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:listitem="@layout/item_spinner_simple"/>

            <TextView
                android:id="@+id/labelManufacturerAuto"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manufacturer"
                app:layout_constraintTop_toTopOf="@+id/spinnerManufacturer"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerManufacturer"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/spinnerManufacturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/spinnerYear"
                app:layout_constraintBottom_toTopOf="@+id/spinnerModel"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsAuto"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_spinner_simple" />

            <TextView
                android:id="@+id/labelModelAuto"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                app:layout_constraintTop_toTopOf="@+id/spinnerModel"
                app:layout_constraintBottom_toBottomOf="@+id/spinnerModel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spinnerModel"
                app:layout_constraintHorizontal_bias="0"/>

            <Spinner
                android:id="@+id/spinnerModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/spinnerManufacturer"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsAuto"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_spinner_simple"/>

            <android.support.constraint.Barrier
                android:id="@+id/barrierLabelsAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="labelYearAuto,labelManufacturerAuto,labelModelAuto" />

            <android.support.constraint.Group
                android:id="@+id/groupLabelsAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="labelYearAuto,labelManufacturerAuto,labelModelAuto"
                tools:visibility="visible"/>

            <android.support.constraint.Group
                android:id="@+id/groupAutomaticInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="spinnerYear,spinnerManufacturer,spinnerModel"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/labelYearManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/editTextYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <EditText
                android:id="@+id/editTextYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="number"
                android:hint="@string/year"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/editTextManufacturer"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"/>

            <TextView
                android:id="@+id/labelManufacturerManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manufacturer"
                app:layout_constraintTop_toTopOf="@+id/editTextManufacturer"
                app:layout_constraintBottom_toBottomOf="@+id/editTextManufacturer"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/editTextManufacturer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="textCapWords"
                android:hint="@string/manufacturer"
                app:layout_constraintTop_toBottomOf="@id/editTextYear"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/labelModelManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                app:layout_constraintTop_toTopOf="@+id/editTextName"
                app:layout_constraintBottom_toBottomOf="@+id/editTextName"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="textCapWords"
                android:hint="@string/name"
                app:layout_constraintTop_toBottomOf="@id/editTextManufacturer"
                app:layout_constraintBottom_toTopOf="@+id/editTextFuelCapacity"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/labelFuelCapacityManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuel_capacity"
                app:layout_constraintTop_toTopOf="@+id/editTextFuelCapacity"
                app:layout_constraintBottom_toBottomOf="@+id/editTextFuelCapacity"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextFuelCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="number"
                android:hint="@string/fuel_capacity"
                app:layout_constraintTop_toBottomOf="@id/editTextName"
                app:layout_constraintBottom_toTopOf="@+id/editTextAverageConsumptionMotorway"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/labelMotorwayManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/width_max_average_consumption_label"
                android:text="@string/average_consumption_motorway"
                app:layout_constraintTop_toTopOf="@+id/editTextAverageConsumptionMotorway"
                app:layout_constraintBottom_toBottomOf="@+id/editTextAverageConsumptionMotorway"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/editTextAverageConsumptionMotorway"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="numberDecimal"
                android:hint="@string/average_consumption_motorway"
                app:layout_constraintTop_toBottomOf="@id/editTextFuelCapacity"
                app:layout_constraintBottom_toTopOf="@+id/editTextAverageConsumptionCity"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/labelCityManual"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/width_max_average_consumption_label"
                android:text="@string/average_consumption_city"
                app:layout_constraintTop_toTopOf="@+id/editTextAverageConsumptionCity"
                app:layout_constraintBottom_toBottomOf="@+id/editTextAverageConsumptionCity"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/editTextAverageConsumptionCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:inputType="numberDecimal"
                android:hint="@string/average_consumption_city"
                app:layout_constraintTop_toBottomOf="@id/editTextAverageConsumptionMotorway"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintStart_toEndOf="@+id/barrierLabelsManual"
                app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.constraint.Barrier
                android:id="@+id/barrierLabelsManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="labelYearManual,labelManufacturerManual,labelModelManual,labelFuelCapacityManual,labelMotorwayManual,labelCityManual"/>

            <android.support.constraint.Group
                android:id="@+id/groupLabelsManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="labelYearManual,labelManufacturerManual,labelModelManual,labelFuelCapacityManual,labelMotorwayManual,labelCityManual"
                tools:visibility="gone"/>

            <android.support.constraint.Group
                android:id="@+id/groupManualInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="editTextYear,editTextManufacturer,editTextName,editTextFuelCapacity,editTextAverageConsumptionMotorway,editTextAverageConsumptionCity"
                tools:visibility="gone"/>

            <TextView
                android:id="@+id/textViewManufacturerAndName"
                style="@style/TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textViewYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="Audi TT"/>

            <TextView
                android:id="@+id/textViewYear"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/textViewManufacturerAndName"
                app:layout_constraintBottom_toTopOf="@+id/textViewFuelCapacity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="2018"/>

            <TextView
                android:id="@+id/textViewFuelCapacity"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/textViewYear"
                app:layout_constraintBottom_toTopOf="@+id/textViewAverageConsumptionMotorway"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="Fuel capacity: 80L"/>

            <TextView
                android:id="@+id/textViewAverageConsumptionMotorway"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/textViewFuelCapacity"
                app:layout_constraintBottom_toTopOf="@+id/textViewAverageConsumptionCity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="Fuel consumption (motorway): 10L/100km"/>

            <TextView
                android:id="@+id/textViewAverageConsumptionCity"
                style="@style/TextViewDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                app:layout_constraintTop_toBottomOf="@id/textViewAverageConsumptionMotorway"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="Fuel consumption (city): 18L/100km"/>

            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1"/>

            <android.support.constraint.Group
                android:id="@+id/groupTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="textViewManufacturerAndName,textViewYear,textViewFuelCapacity,textViewAverageConsumptionMotorway,textViewAverageConsumptionCity"
                tools:visibility="gone"/>

            <Button
                android:id="@+id/buttonInputType"
                style="@style/ButtonDefault"
                android:text="@string/manual_input"
                android:layout_marginTop="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                app:layout_constraintTop_toBottomOf="@id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.v7.widget.CardView>