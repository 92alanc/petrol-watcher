<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:background">@drawable/shape_rounded_corners_button_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonOrange" parent="ButtonGrey">
        <item name="android:background">@drawable/shape_rounded_corners_button_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextWidthMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewHeader" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TextViewTitle" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

</resources>
