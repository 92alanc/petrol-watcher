<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base -->
    <style name="AppStyle"/>

    <!-- region Button -->
    <style name="AppStyle.Button.Default" parent="AppStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_button</item>
    </style>

    <style name="AppStyle.Button.Teal" parent="AppStyle.Button.Default">
        <item name="android:background">@color/teal_dark</item>
    </style>

    <style name="AppStyle.Button.Amber" parent="AppStyle.Button.Default">
        <item name="android:background">@color/amber</item>
    </style>
    <!-- endregion -->

    <!-- region RecyclerView -->
    <style name="AppStyle.RecyclerView.FixedScrollbar" parent="AppStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/teal</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <!-- endregion -->
</resources>