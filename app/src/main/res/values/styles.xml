<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.PopupOverlay.Light" parent="AppTheme.PopupOverlay">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rounded_corner_button_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rounded_corner_button_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonOrange" parent="ButtonGrey">
        <item name="android:background">@drawable/shape_rounded_corner_button_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewDialogueButton" parent="TextViewDefault">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewHeader" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TextViewTitle" parent="TextViewDefault">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextViewWarning" parent="TextViewHeader">
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewDescription" parent="TextViewDefault">
        <item name="android:textColor">@color/grey_dark</item>
    </style>

</resources>
